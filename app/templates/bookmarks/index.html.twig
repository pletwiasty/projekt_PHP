

{% block body %}
    <h1>
        {{ 'title.bookmarks_list'|trans }}
    </h1>
    {% if bookmarks is defined and bookmarks|length %}
        <ul>
            {% for row in bookmarks %}
                <li>{{ row.id }},{{ row.title }}, {{ row.url }} </li>
            {% endfor %}
        </ul>
    {% else %}
        <div>
            List is empty!
        </div>
    {% endif %}
{% endblock %}